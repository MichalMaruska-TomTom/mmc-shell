#! /usr/bin/zsh -f

setopt extendedglob


foreach dir (^build-area(/)) {
    cd $dir
    if [ -d .git ];
    then
#    echo $files
	if git remote |grep origin;
	then
	    if git status;
	    then
		cecho green "pulling from ";git remote show origin|grep 'Fetch URL'
		git pull origin master
	    else
		cecho yellow $dir is not associated with any Origin
	    fi
	else
	    cecho red $dir is not clean!
	fi
    else
	cecho red $dir  is not Git
    fi
    cd -
}