#! /usr/bin/zsh -f

setopt extendedglob

gitoptions="--no-pager"
git=(git $gitoptions)

foreach dir (^build-area(/)) {
    cd $dir
    if [ -d .git ];
    then
	cecho yellow "===" $dir "==="
	files=$(${git} ls-files -o)
#    echo $files
	if [ ! -z $files ]
	then
	    pwd
	    ls -l --color $files
	fi
	if ${git} status;
	then
	    if git remote |grep origin;
	    then
		cecho green -n "pushing to ";git remote show origin|grep 'Push  URL'
		git push origin
	    else
		cecho yellow $dir is not associated with any Origin
	    fi
	else
	    cecho red $dir is not clean!
	fi
    else
	cecho blue $dir  is not Git
    fi
    cd -
}