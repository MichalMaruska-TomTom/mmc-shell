#! /usr/bin/zsh -f

setopt extendedglob

foreach dir (^build-area(/)) {
    cd $dir
    if [ -d .git ];
    then
	files=$(git ls-files -o)
#    echo $files
	if [ ! -z $files ]
	then
	    pwd
	    ls -l --color $(git ls-files -o)
	fi
	if git status;
	then
	    if git remote |grep origin;
	    then
		cecho green "pushing to ";git remote show origin|grep 'Push  URL'
		git push origin
	    else
		cecho yellow $dir is not associated with any Origin
	    fi
	else
	    cecho red $dir is not clean!
	fi
    else
	cecho blue $dir  is not Git
    fi
    cd -
}