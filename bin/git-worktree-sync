#!/bin/zsh -feu


usage()
{
    setopt POSIX_ARGZERO
    cat <<EOF
usage: ${0##*/} [+-h] [--] {Worktree}    [{FROM} | {ref}]

Either [ref] is given or STASH & sync to HEAD of from.


Description:

syncs 2 git worktrees, by git commands.
git worktree  list --porcelain
EOF
}

while getopts :h OPT; do
    case $OPT in
        h|+h)
            usage
            exit 0
            ;;
        *)
            usage >&2
            exit 2
    esac
done
shift OPTIND-1
OPTIND=1

if [ $# -lt 2 ]; then
    usage >&2
    exit 1;
fi

readonly TARGET=$1

if [[ ! -d $2 ]]; then
    sha=$(git rev-parse $2)
else
    #by default:
    sha=$(
        cd $2
        # get the id:
        # sha=$(git rev-parse HEAD)
        sha=$(git stash create)

        if [ -z "$sha" ];
        then
            cecho yellow "no stash created" >&2
            sha=$(git rev-parse HEAD)
        fi

        echo $sha
       )
fi

# there is a race w/ "git gc" which might drop the $sha commit.
cd $TARGET;
sha_from=$(git rev-parse HEAD)
git reset --hard $sha

git diff --name-status $sha_from
