#! /bin/bash -e



while getopts :h OPT; do
    case $OPT in
	h|+h | *)
	    echo "usage: ${0##*/} [+-h] branch base [new-base]"
	    exit 2
    esac
done
shift $(( OPTIND - 1 ))
OPTIND=1
branch=$1
base=$2
## if git status

# git co $branch

if [ $# -gt 2 ]; then
    new_base=$3
    git rebase --onto $new_base $base $branch
else
    # note: the order vv
    git rebase $base $branch
fi
