color_echo ()
{
    if which color >/dev/null
    then
	echo `color green`  `color bd` "$1" `color off`
    else
	echo "$1"
    fi    
}

#copied to aliases?
play_one ()
#=======
{
    # cecho  red "play $1:"
    case $1 in
	( *.mpg)
#    if expr match "$1"  '.*\.mpg$';
#    then
        # mpg123 -b 10000 "$1" ;;
	color_echo $1
	mpg321 --aggressive -q -b 10000 "$1";;
        
#    else

	( *.mp2)
	color_echo $1
        mpg321 --aggressive -q -b 10000  "$1" ;;
	(  *.xmms.mp3)
	echo xmms  --play ${1};;


	( *.mp3)
	color_echo "$1"
	#    echo `color red`  `color bd` $1 `color off`

       # mpg321 skips when over Net!
       # --buffer 10000
       # problems w/ hi bit-rates!
       # mpg321 --aggressive -o alsa09 -q -b 10000  "$1" 

       # -b 10000    ... fails silently!
       # fixme: this is oss, not ALSA!
	if [ -z ${playdsp} ];
	then
            mpg123 --gapless --aggressive -q  "$1"
	else
            mpg123 -a ${playdsp:-/dev/dsp} --aggressive -q  "$1" 
	fi

       # mpg123 --aggressive -q  "$1";;
	;;

	(  *.ogg)
	color_echo "$1"
	ogg123 --quiet  "$1";;



	(  *.m4a)
	color_echo "$1"
	# 
	mplayer -really-quiet -ao pulse,alsa "$1" </dev/null ;;


	(  *.flac)
	color_echo "$1"
	# 
	mplayer -really-quiet -ao pulse,alsa "$1" </dev/null ;;


    # enqueue
#       fi
    esac
    # until $PLAY $1 ;do echo ; done
}



if [ $# -gt 0 -a -d ${1} ] ;
then
    cd ${1}
    shift
else
    echo "no directory specified!"
fi

START=1

if [ $# -ge 1 ];
    then
    START=$1
fi
echo "skipping $START"


#
#`<space><tab><newline>''

##
old_ifs="${IFS}"
# IFS="\n"
# songs=`ls |sort -n|sed -e "s/'/\'/g;s/^/'/;s/$/'/"`

if [ -f order ];
then
    songs=$(cat order)
else
    songs=`ls |sort -n`
#|sed -e "s/~/\\~/g;s/$/~/"`
fi


# IFS='\n \t'
# echo Going to play ${songs}
IFS="
"
setopt SH_WORD_SPLIT
#typeset -A sep_songs
#sep_songs=(${songs})
#unsetopt SH_WORD_SPLIT

for song in $songs;
do
    unsetopt SH_WORD_SPLIT
# We must return to use commonly accepted syntax: 
    IFS="${old_ifs}"
    if [ $START -gt 1 ];
    then
	START=`expr $START - 1`
	    # echo $START
	else
	    if [ -d "$song" ];
	    then
		(cd "$song"
		$SELF_CMD
		)
	    else
	       play_one  "$song"
	    fi
    fi
done

