#! /bin/zsh -f

function play_one ()
{
    # cecho  red "play $1:"
    case $1 in
	*.mpg)
        # mpg123 -b 10000 "$1" ;;
	    cecho green $1
	    mpg321 --aggressive -q -b 10000 "$1"
	    ;;
	*.mp2)
	    cecho green $1
            mpg321 --aggressive -q -b 10000  "$1" ;;

	 *.xmms.mp3)
	    echo xmms  --play ${1}
	    ;;
	*.mp3)
	    cecho green "$1"
	#    echo `color red`  `color bd` $1 `color off`

       # mpg321 skips when over Net!
       # --buffer 10000
       # problems w/ hi bit-rates!
       # mpg321 --aggressive -o alsa09 -q -b 10000  "$1"

       # -b 10000    ... fails silently!
       # fixme: this is oss, not ALSA!
            mpg123 --gapless ${playdsp+-a $playdsp} --aggressive -q  "$1"
	    ;;

	*.ogg)
	    cecho green "$1"
	    ogg123 --quiet  "$1";;



	*.flv | *.mp4 | *.m4a)
	    cecho green "$1"
	    #
	    if which mplayer > /dev/null ; then
		mplayer -vo none -really-quiet -ao pulse,alsa "$1" </dev/null
	    else
		gst123 --novideo --quiet "$1"
	    fi
	    ;;

	*.flac)
	    cecho green "$1"
	    if which mplayer > /dev/null ; then
		mplayer -really-quiet -ao pulse,alsa "$1" </dev/null
	    else
		# gst123 --quiet $1 &> /dev/null </dev/null
		# gst123 insists on having the console (being in foregroung).
		flac --silent --decode --stdout $1 | aplay  -q  -
	    fi
	    ;;
	*)
	    mplayer -vo none -really-quiet -ao pulse,alsa "$1" </dev/null
	    ;;
    esac
}

for file in "$@"; do
    play_one $file
done
