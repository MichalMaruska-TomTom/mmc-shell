#! /usr/bin/zsh -f

# Features:
# * invoke with --git-prebuild=./auto only
#

# scan $@ and drop -i
# -i -> --git-ignore-new
args=()
if [ -e auto ]
then
    args+="--git-prebuild=./auto"
fi

foreach arg ($@)
{
    case $arg in
	-i)
	    args+="--git-ignore-new"
	    ;;
	-u)
	    args+="-uc -us";;
	*)
	    args+=$arg
    esac
}

git-buildpackage $args
