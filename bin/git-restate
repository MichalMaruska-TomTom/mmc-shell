#! /usr/bin/zsh -feu

dir=$1
cecho hiyellow $dir
cd $dir

name=${2#refs/heads/}

# but is the base pre_fetch_head?
if git-segment $name;
then
    # or poset?
    git-rebase-segment $name
elif git-sum $name
then
    git-rebase-poset $name
fi




git checkout $name

